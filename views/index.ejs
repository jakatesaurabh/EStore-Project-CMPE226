<!DOCTYPE html>
<html ng-app="storeApp">
<% include header %>

<body>
	<% include navbar %>
	<br />
	<br />
	<br />
	<br />

	<div 
		ng-init="productlist = <%= JSON.stringify(products) %>"
		class="container">
		<div class="container">
			<h4>Search: </h4><input type="text" class="form-control" ng-model="searched">
			<h2><%=title%></h2>
			<div>
				<div class="panel panel-default">
					<div class="panel-heading" class="animate-repeat col-xs-12"
						ng-repeat="prod in productlist | filter:searched">
						
						<h4><a href="/product/{{prod.productid}}" class="text-left " >{{prod.Name}}</a></h4>
						<div class="text-left ">{{prod.Category}}</div>
						<div class="text-right ">${{prod.Price}}</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<hr>

		<% include footer %>
	</div>
</body>
</html>